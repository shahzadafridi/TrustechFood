<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/order_detail_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/status_pending_bg"
        android:fontFamily="@font/montserrat_regular"
        android:text="Pending"
        android:textColor="#F44336"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/order_detail_restName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Restaurnant Name"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/order_detail_restAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Restaurnant Address"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/order_detail_restRatting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Restaurnant Ratting"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/order_detail_foodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Food Name"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/order_detail_foodPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Food Price"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/order_detail_ratting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Food Ratting"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#1A000000" />

</LinearLayout>
