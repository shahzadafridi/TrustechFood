<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/order_detail_admin_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/status_pending_bg"
        android:fontFamily="@font/montserrat_regular"
        android:text="Pending"
        android:textColor="#F44336"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/order_detail_admin_restName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Restaurnant Name"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/order_detail_admin_restAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Restaurnant Address"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/order_detail_admin_restRatting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Restaurnant Ratting"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/order_detail_admin_foodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Food Name"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/order_detail_admin_foodPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Food Price"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/order_detail_admin_ratting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Food Ratting"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/order_detail_admin_decline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="Decline"/>

        <Button
            android:id="@+id/order_detail_admin_approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="Approve"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#1A000000" />

</LinearLayout>
