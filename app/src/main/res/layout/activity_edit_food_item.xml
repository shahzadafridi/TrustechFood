<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".Admin.FoodItem.EditFoodItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/editfoodItem_listRestaurnants"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="18dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Name"/>

        <EditText
            android:id="@+id/editfoodItem_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Category"/>

        <EditText
            android:id="@+id/editfoodItem_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="5dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Ratting"/>

        <EditText
            android:id="@+id/editfoodItem_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Price"/>

        <EditText
            android:id="@+id/editfoodItem_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/editUpdateFoodItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:padding="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Update Food Item"
            android:textColor="#fff"
            android:textSize="18dp"
            android:background="@drawable/btn"
            android:gravity="center_horizontal"
            android:onClick="Update"/>

    </LinearLayout>

</LinearLayout>