<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/cust_food_item_rest_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Name"/>

    <TextView
        android:id="@+id/cust_food_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Name"/>

    <TextView
        android:id="@+id/cust_food_item_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Category"/>

    <TextView
        android:id="@+id/cust_food_item_ratting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Ratting"/>

    <TextView
        android:id="@+id/cust_food_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Price"/>

    <Button
        android:id="@+id/cust_food_item_order"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Food"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="1dp"
        android:background="#1A000000"/>


</LinearLayout>
