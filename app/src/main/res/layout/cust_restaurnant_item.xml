<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/cust_rest_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Name"/>

    <TextView
        android:id="@+id/cust_rest_item_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Address"/>

    <TextView
        android:id="@+id/cust_rest_item_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Contact"/>

    <TextView
        android:id="@+id/cust_rest_item_ratting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Ratting"/>

    <TextView
        android:id="@+id/cust_rest_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Description"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="1dp"
        android:background="#1A000000"/>

</LinearLayout>
